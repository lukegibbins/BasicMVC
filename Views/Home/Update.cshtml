@using ChillAndGrill.Models
@model ChillAndGrill.Models.Restaurant

@{
    ViewBag.Title = "Update";
}

<h1>Update @Model.Id: @Model.Name</h1>
<div>
    <form method="post">
        <input type="hidden" name="Id" value="@Model.Id" />
        <div>
            @Html.Label("Name")
            <input type="text" name="Name" value="@Model.Name" />
            <span>@Html.ValidationMessage("Name")</span>
        </div>
        <div>
            @Html.Label("Cuisine")
            <select name="Cuisine">
                <option value="@Model.Cuisine" selected hidden>@Model.Cuisine</option>
                @foreach (CuisineType cuisineType in Enum.GetValues(typeof(CuisineType)))
                {
                    <option value="@cuisineType">@cuisineType</option>
                }
            </select>
        </div>
        <input type="Submit" name="save" value="Save" />
        @Html.AntiForgeryToken()
    </form>
</div>

<br />
<button>@Html.ActionLink("Home", "Index", "Home")</button>