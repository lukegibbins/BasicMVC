@model ChillAndGrill.ViewModels.HomeIndexViewModel


@{
    ViewBag.Title = "Home Page";
}

<h1>All Restaurants - @DateTime.Now.Year</h1>

@foreach (var restaurant in Model.Restaurants)
{
    @Html.Partial("_Summary", restaurant);
}

<div>
    <br />
    <button>@Html.ActionLink("Add Restaurant", "Create", "Home")</button>
</div>

@section footer{
    @Model.CurrentMessage
}

